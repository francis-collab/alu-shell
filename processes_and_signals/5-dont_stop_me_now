#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process.

# Find the PID of the 4-to_infinity_and_beyond process
pid=$(pgrep -f "4-to_infinity_and_beyond")

# If the process exists, kill it
if [ -n "$pid" ]; then
    kill "$pid" 2>/dev/null
    sleep 1  # Wait for a moment to allow the process to terminate
    # Check if the process is still running
    if ! kill -0 "$pid" 2>/dev/null; then
        echo "Process 4-to_infinity_and_beyond (PID $pid) has been stopped."
    else
        echo "Process 4-to_infinity_and_beyond (PID $pid) could not be stopped. Attempting to force kill."
        kill -9 "$pid"  # Forcefully kill if it is still running
        if ! kill -0 "$pid" 2>/dev/null; then
            echo "Process 4-to_infinity_and_beyond (PID $pid) has been forcefully stopped."
        else
            echo "Failed to stop process 4-to_infinity_and_beyond (PID $pid)."
        fi
    fi
else
    echo "Process 4-to_infinity_and_beyond not found."
fi

#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process by killing its PID.

# Iterate over all running processes in /proc
for pid in /proc/[0-9]*; do
    # Check if the process name matches 4-to_infinity_and_beyond
    if [ "$(cat "$pid/comm" 2>/dev/null)" = "4-to_infinity_and_beyond" ]; then
        kill "$(basename "$pid")"
        echo "Process 4-to_infinity_and_beyond (PID $(basename "$pid")) has been stopped."
        break
    fi
done

#!/usr/bin/env bash
# This script stops the 4-to_infinity_and_beyond process by killing its PID.

# Find the PID of the process and kill it.
pid=$(pgrep -f "4-to_infinity_and_beyond")

# Check if the process exists before killing
if [ -n "$pid" ]; then
    kill "$pid"
    echo "Process 4-to_infinity_and_beyond (PID $pid) has been stopped."
else
    echo "Process 4-to_infinity_and_beyond is not running."
fi

#!/usr/bin/env bash
# This script manages the my_process script.

# Define the PID file path
PID_FILE="/var/run/my_process.pid"

# Function to start the process
start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
    else
        # Start the process and save the PID
        nohup /path/to/manage_my_process &  # Replace with the correct path to your script
        echo $! > "$PID_FILE"
        echo "manage_my_process started."
    fi
}

# Function to stop the process
stop() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")" && rm -f "$PID_FILE"
        echo "manage_my_process stopped."
    else
        echo "manage_my_process not running."
    fi
}

# Function to restart the process
restart() {
    stop
    start
    echo "manage_my_process restarted."
}

# Check for command line arguments
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
